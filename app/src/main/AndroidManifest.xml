<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.freshshoppe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SearchActivity"></activity>
        <activity android:name=".activities.ProductDetails" />
        <activity android:name=".activities.ProductList" />
        <activity android:name=".activities.CategoryActivity" />
        <activity
            android:name=".activities.DashBoard"
            android:label="@string/title_activity_dash_board"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ForgotPWD" />
        <activity android:name=".activities.AddAddress" />
        <activity android:name=".activities.AddressList" />
        <activity android:name=".activities.Combos" />
        <activity android:name=".activities.Register" />
        <activity android:name=".activities.ProfileEdit" />
        <activity android:name=".activities.Login" />
        <activity android:name=".activities.OrderHistory" />
        <activity android:name=".activities.WebViewActivity" />
        <activity android:name=".activities.Cart" />
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>