<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/two_hundred_fifty"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:layout_margin="@dimen/twenty"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="25dp"
            android:layout_marginRight="@dimen/fifteen"
            android:fontFamily="@font/sans_bold"
            android:gravity="center_vertical"
            android:text="New update available on playstore,\nplease update to use app.."
            android:textColor="@color/colorAccent"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/entered_amt"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:fontFamily="@font/sans_regular"
            android:gravity="center"
            android:hint=""
            android:visibility="invisible"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:background="@color/colorAccent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_cancel"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/reject_bg"
                android:fontFamily="@font/sans_bold"
                android:text="Exit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/tv_sure"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/accept_bg"
                android:fontFamily="@font/sans_bold"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
