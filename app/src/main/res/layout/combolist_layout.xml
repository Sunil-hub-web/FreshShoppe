<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hundred_fifty"
    android:layout_marginBottom="@dimen/ten"
    android:layout_marginLeft="@dimen/five"
    android:layout_marginRight="@dimen/five"
    app:cardCornerRadius="@dimen/ten">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/hundred_twenty"
            android:layout_height="@dimen/hundred_fifty">


            <ImageView
                android:id="@+id/imag_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/prod1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/six">

                <TextView
                    android:id="@+id/restrurant_food_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three"
                    android:fontFamily="@font/sans_regular"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/ten"
                    android:text="Top Restaurants"
                    android:textColor="@color/textcol"
                    android:textSize="@dimen/fifteen" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/restt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/sans_bold"
                        android:paddingLeft="@dimen/ten"
                        android:singleLine="true"
                        android:text="Rs. 1520.00"
                        android:textColor="@color/textcol"
                        android:textSize="@dimen/twelve" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/five"
                        android:fontFamily="@font/sans_bold"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/eight"
                        android:text="4.0*"
                        android:textColor="@color/button_color"
                        android:textSize="@dimen/eleven" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/addlay"
                android:layout_width="@dimen/hundred_twenty"
                android:layout_height="@dimen/forty"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp">


                <RelativeLayout
                    android:id="@+id/instock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <LinearLayout
                        android:id="@+id/l_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/five">

                        <TextView
                            android:id="@+id/addtext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/add_bg"
                            android:fontFamily="@font/sans_bold"
                            android:gravity="center"
                            android:text="Add"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fourteen" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l_add_cart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/five"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_minus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btn_minus__count"
                            android:fontFamily="@font/sans_bold"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/white"
                            android:textSize="@dimen/eighteen" />

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:fontFamily="@font/sans_bold"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/textcol"
                            android:textSize="@dimen/twelve" />

                        <TextView
                            android:id="@+id/tv_plus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btn_plus_count"
                            android:fontFamily="@font/sans_bold"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fifteen" />

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/outofstock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/restrurant_white_box"
                    android:padding="5dp"
                    android:text="Out of Stock"
                    android:textColor="@color/black"
                    android:visibility="gone" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
